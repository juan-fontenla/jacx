<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tV_titulo_elemento_list_trip_music"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="178dp"
        android:text="Titulo Cancion"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iV_portada"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tV_autor_elemento_list_trip_music"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Nombre Autor"
        app:layout_constraintStart_toEndOf="@+id/iB_download_song_trip_music"
        app:layout_constraintTop_toBottomOf="@+id/tV_titulo_elemento_list_trip_music" />

    <ImageButton
        android:id="@+id/iB_mas_opciones_trip_music"
        android:layout_width="46dp"
        android:layout_height="23dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/iB_mas_opciones_trip_music"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/tV_autor_elemento_list_trip_music"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tV_titulo_elemento_list_trip_music"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/img_point_song" />

    <ImageView
        android:id="@+id/iV_portada"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/iV_portada_album_trip_music"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_music_note_24" />

    <ImageButton
        android:id="@+id/iB_download_song_trip_music"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/iB_download_song_trip_music"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/tV_autor_elemento_list_trip_music"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iV_portada"
        app:layout_constraintTop_toBottomOf="@+id/tV_titulo_elemento_list_trip_music"
        app:srcCompat="@drawable/img_cloud_download" />

</androidx.constraintlayout.widget.ConstraintLayout>